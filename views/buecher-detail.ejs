<%- include("parts/header", {current: "buecher"}) %>

    <div id="content">
        <section class="headline">
            <h1>
                <%= buch.name %>
            </h1>
        </section>
        <main>
            <% if(typeof action !== "undefined" && action == "added") { %>
                <div class="response success" style="margin-bottom:30px;">Ihre Reservierung wurde erfolgreich hinzugef√ºgt.</div>
                <% } %>
                    <section class="buch-main">

                        <div class="book-image">
                            <img src="/img/comingsoon.png" alt="book image">
                        </div>
                        <div class="buch-beschreibung">
                            <p>
                                <%= buch.beschreibung %>
                            </p>
                        </div>


                        <section class="buch-details">
                            <div>
                                <span class="buch-detail__left">Autor:</span>
                                <span class="buch-detail__right">
                                    <%= buch.autor.name %>
                                </span>
                            </div>
                            <div>
                                <span class="buch-detail__left">Fachrichtung:</span>
                                <span class="buch-detail__right">
                                    <%= buch.fachrichtung %>
                                </span>
                            </div>
                            <div>
                                <span class="buch-detail__left">Jahr:</span>
                                <span class="buch-detail__right">
                                    <%= buch.jahr %>
                                </span>
                            </div>
                            <div>
                                <span class="buch-detail__left">ISBN:</span>
                                <span class="buch-detail__right">
                                    <%= buch.isbn %>
                                </span>
                            </div>
                        </section>
                    </section>
                    <a href="/reservierungen/neu?id=<%= id %>"><button class="button primary filled">Buch reservieren</button></a>

        </main>
        <%- include("parts/aside") %>
    </div>

    <%- include("parts/footer") %>