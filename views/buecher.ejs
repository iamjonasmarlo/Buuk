<%- include("parts/header", {current: "buecher"}) %>

    <div id="content">
        <section class="headline">
            <h1>Bücher</h1>
        </section>
        <main>
            <section>

                <table class="table">

                    <tr>
                        <th></th>
                        <th>Buch</th>
                        <th>Autor</th>
                        <th>ISBN</th>
                        <th>Erscheinungsjahr</th>
                        <th>Standort</th>
                        <th>Regal</th>
                        <th></th>
                    </tr>
                    <% buecher.forEach(function(buch, index) { %>
                        <tr>

                            <td class="status"> <span class="status__notavailable"></span></td>
                            <td>
                                <%= buch.name %>
                            </td>
                            <td>
                                <a href="autor-detail">
                                    <%= buch.autor %>
                                </a>
                            </td>
                            <td>
                                <%= buch.isbn %>
                            </td>
                            <td>
                                <%= buch.jahr %>
                            </td>
                            <td><a href="standorte-detail">Emil-Figge-Straße 44</a></td>
                            <td>01-b-14-13</td>
                            <td><a href="buecher/detail?id=<%= index %>">Details</a></td>

                        </tr>
                        <% }); %>

                </table>
                <a href="buch-add"><button class="button primary filled">Neues Buch hinzufügen</button></a>
                <div class="legend">
                    <div class="legend__element">
                        <span class="available"></span> Verfügbar
                    </div>
                    <div class="legend__element">
                        <span class="notavailable"></span> Nicht verfügbar
                    </div>
                </div>

            </section>
        </main>
        <%- include("parts/aside") %>
    </div>

    <%- include("parts/footer") %>