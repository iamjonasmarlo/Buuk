<%- include("parts/header",{current: "autoren"}) %>

<div id="content">
    <section class="headline">
        <h1>Autoren</h1>
    </section>
    <main>
        <section class="autoren">
            <% autoren.forEach(function(autor, index) { %>
            <div class="autor">
                <div class="inner">
                    <div class="autor__image">
                        <img src="/img/comingsoon.png" alt="Autorfoto">
                    </div>
                    <div class="autor__info">
                        <a href="autor/detail?id=<%= index %>" class="title">
                            <h3>
                                <%= autor.name %>
                            </h3>
                        </a>
                        <hr>
                        <p class="fachrichtung-book">
                            <%= autor.fachrichtung %>
                        </p>
                    </div>
                    <a href="autor/detail?id=<%= index %>" class="autor__link">
                        Zum Autor<i class="ti-arrow-right"></i>
                    </a>
                </div>
            </div>
            <% }); %>
        </section>
        <a href="/autor/neu" class="button primary filled">Neuen Autor hinzuf√ºgen</a>
    </main>
    <%- include("parts/aside") %>
</div>
<script src="js/scripts.js"></script>

<%- include("parts/footer") %>