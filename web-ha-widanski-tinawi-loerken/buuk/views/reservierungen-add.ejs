<%- include("parts/header", {current: "reservierungen"}) %>

<div id="content">
    <section class="headline">
        <h1>Buch reservieren</h1>
    </section>
    <main>
        <section class="form">
            <form action="/buecher/detail?id=<%= id %>" method="POST" id="reserve-form">
                <div class="input-group">
                    <h2>Buchinfos</h2>
                    <label>
                        Buchtitel:
                        <input type="text" value="<%= buch.name %>" readonly>
                    </label>
                    <label>
                        ISBN:
                        <input type="text" value="<%= buch.isbn %>" readonly>
                    </label>
                    <label>
                        Autor:
                        <input type="text" value="<%= buch.autor.name %>" required readonly>
                    </label>
                    <label>
                        Erscheinungsjahr:
                        <input type="number" value="<%= buch.jahr %>" readonly>
                    </label>
                    <label>
                        Standort:
                        <% standorte.forEach(function(standort, index) { %>
                        <% standort.buecher.forEach(function(buch_sub) { %>
                        <% if(buch_sub == buch) { %>
                        <input type="text" value="<%= standort.name %>" readonly>
                        <% } %>
                        <% }); %>
                        <% }); %>
                    </label>
                </div>
                <div class="input-group">
                    <h2>Datum der Reservierung</h2>
                    <label>
                        Datum von:
                        <input type="date" name="datumVon" required>
                    </label>
                    <label>
                        Datum bis:
                        <input type="date" name="datumBis" required>
                    </label>
                </div>
                <input type="hidden" value="<%= id %>" name="buch">
                <button type="submit" class="button primary filled">Jetzt reservieren</button>
            </form>
        </section>
    </main>
    <%- include("parts/aside") %>
</div>

<%- include("parts/footer") %>